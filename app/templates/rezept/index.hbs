<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <BsNav
        @type="pills"
        @justified={{false}}
        @stacked={{true}}
        @fill={{false}} as |nav|
      >
          <h3>Rezepte</h3>
          {{#each model.rezepte as |rezept|}}
            <nav.item>
              {{#link-to 'rezept' rezept.myid}}
                {{rezept.name}}
              {{/link-to}}
              </nav.item>
          {{/each}}
      </BsNav>
    </div>
    <div class="col-8">
          <h1>{{model.rezept.name}}</h1>
          {{{model.rezept.beschreibung}}}

    </div>
  </div>
</div>
